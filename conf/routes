# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

#HEAD     /healthcheck                controllers.Application.healthCheck

GET       /                           controllers.BoardController.index
GET       /list                       controllers.BoardController.get_lists
POST      /list                       controllers.BoardController.post_list

GET       /list/:boardId               controllers.BoardControllerId.get_list(boardId: Int)
POST      /list/:boardId               controllers.BoardControllerId.post_list(boardId: Int)
DELETE    /list/:boardId               controllers.BoardControllerId.delete_list(boardId: Int)

GET       /diego                      controllers.Test.get_test()

# GET     /list/:boardId/:itemId       controllers.ItemController.get_item(boardId:Int, itemId: Int)
# PUT     /list/:boardId/:itemId       controllers.ItemController.put_item(boardId:Int, itemId: Int)
# DELETE  /list/:boardId/:itemId       controllers.ItemController.delete_item(boardId:Int, itemId: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
