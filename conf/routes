# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

# HEAD  /healthcheck                  controllers.Application.healthCheck

GET       /                           controllers.ListController.index
GET       /lists                      controllers.ListController.get_lists
POST      /list                       controllers.ListController.post_list

GET       /diego                      controllers.Test.get_test()

GET       /list/:listId               controllers.ListControllerId.get_list(listId: Int)
POST      /list/:listId               controllers.ListControllerId.post_list(listId: Int)
DELETE    /list/:listId               controllers.ListControllerId.delete_list(listId: Int)

# GET     /list/:listId/:itemId       controllers.ItemController.get_item(listId:Int, itemId: Int)
# PUT     /list/:listId/:itemId       controllers.ItemController.put_item(listId:Int, itemId: Int)
# DELETE  /list/:listId/:itemId       controllers.ItemController.delete_item(listId:Int, itemId: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
